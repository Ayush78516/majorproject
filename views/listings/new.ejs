<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

            <div class="mb-3">
                <table for="title" class="form-label">Title </table>
                <input name="listing[title]" type="text" placeholder="Add a catchy title" class="form-control" required>
                <div class="valid-feedback">Title looks good</div>
            </div>

            
            <div class="mb-3">
                <table for="description" class="form-label">Description </table>
                <textarea name="listing[description]" type="text" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a short description</div>
            </div>

            <div class="mb-3">
                <table for="image" class="form-label">Upload Listing Image</table>
                <input name="listing[image]" type="file" class="form-control">
                required
            </div>
            
            <div class="row">
                <div class="mb-3 col-md-4">
                    <table for="price" class="form-label">Price </table>
                    <input name="listing[price]" class="form-control" required>
                    <div class="invalid-feedback">Price should be valid</div>
                </div>
            
                <div class="mb-3 col-md-8">
                    <table for="country" class="form-label">Country </table>
                    <input name="listing[country]" type="text" class="form-control" required>
                    <div class="invalid-feedback">Country name should be valid</div>
                </div>
                
            </div>
        

            <div class="mb-3">
            <table for="location" class="form-label">Location </table>
            <input name="listing[location]" type="text" class="form-control" required>
            <div class="invalid-feedback">Location should be valid</div>
            </div>

            <button class="btn btn-dark add-btn mt-3">Add</button>
        </form>
    </div>
</div>